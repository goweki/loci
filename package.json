{
  "name": "loci",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "npx prisma migrate dev && prisma generate && next dev",
    "build": "NODE_ENV=production next build",
    "postbuild": "npx prisma migrate deploy",
    "docker:build": "docker build -t ghcr.io/goweki/loci:latest .",
    "start": "next start -p ${PORT:-3000}",
    "postinstall": "prisma generate",
    "db:launch": "docker run --name loci-postgres -e POSTGRES_USER=loci -e POSTGRES_PASSWORD=loci-pass -e POSTGRES_DB=loci-db -p 5432:5432 -v loci-data:/var/lib/postgresql/data -d postgres:17",
    "db:start": "docker start loci-postgres",
    "db:stop": "docker stop loci-postgres",
    "db:rm": "docker rm loci-postgres && docker volume rm loci-data",
    "db:restart": "npm run db:stop && npm run db:start",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "africastalking": "^0.6.7",
    "aos": "^1.2.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "mongodb": "^6.5.0",
    "next": "^15.5.6",
    "next-auth": "^4.24.11",
    "next-themes": "^0.2.1",
    "nodemailer": "^6.9.12",
    "paystack-sdk": "^3.0.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-apexcharts": "^1.4.1",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "react-hot-toast": "^2.4.1",
    "react-social-icons": "^6.25.0",
    "react-transition-group": "^4.4.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/africastalking": "^0.6.2",
    "@types/aos": "^3.0.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-transition-group": "^4.4.12",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "^15.5.6",
    "husky": "^9.1.7",
    "postcss": "^8",
    "prisma": "^6.16.2",
    "tailwindcss": "^3.4.1",
    "typescript": "5.9.3"
  }
}

{
  "name": "loci",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev:http": "npx prisma migrate dev && prisma generate && next dev",
    "dev": "npx prisma migrate dev && prisma generate && next dev --experimental-https",
    "build": "NODE_ENV=production next build",
    "postbuild": "npx prisma migrate deploy",
    "docker:build": "docker build -t ghcr.io/goweki/loci:latest .",
    "start": "next start -p ${PORT:-3000}",
    "postinstall": "prisma generate",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "pre-commit": "lint-staged"
  },
